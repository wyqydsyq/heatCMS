<theme>
    <title>heatCMS Default</title>
    <version>1.0</version>
    <released></released>
    <updated></updated>
    <description>Default theme for heatCMS</description>
    <author>Damon Poole</author>
    <url>http://powerindesign.com/</url>
    <image_url></image_url>
    <thumb_url></thumb_url>
	
    <resources>
	<css>
            <file>
                <title>blueprint</title>
                <src>blueprint/screen.css</src>
            </file>
            <file>
                <title>general</title>
                <src>general.css</src>
            </file>
            <file>
                <title>jqueryui</title>
                <src>jquery-ui-1.8.12.custom.css</src>
            </file>
        </css>
        
	<js>
            <file>
                <title>jquery</title>
                <src>jquery-1.6.1.min.js</src>
            </file>
            <file>
                <title>jquery-ui</title>
                <src>jquery-ui-1.8.12.custom.min.js</src>
            </file>
            <file>
                <title>tinymce</title>
                <src>tiny_mce/jquery.tinymce.js</src>
            </file>
            <file>
                <title>jquery-tablesorter</title>
                <src>jquery.tablesorter.min.js</src>
            </file>
            <file>
                <title>jquery-functions</title>
                <src>functions.js</src>
            </file>
            <file>
                <title>heat</title>
                <src>heat.js</src>
            </file>
	</js>
		
	<php>
	    <file>
		<title>template</title>
		<src>template.php</src>
	    </file>
	</php>
    </resources>
    
    <var name="#colour1">#ffffff</var>
    <var name="#colour2">#f60</var>
    <var name="#colour3">#333</var>
    <var name="#colour4">#999</var>
    <var name="#colour5">#F9F1E5</var>
